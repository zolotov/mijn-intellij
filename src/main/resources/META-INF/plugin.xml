<idea-plugin>
    <id>com.github.zolotov.mijn-intellij</id>
    <name>Mijn IntelliJ</name>
    <vendor>zolotov</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.java</depends>
    <depends>JUnit</depends>

    <extensions defaultExtensionNs="com.intellij">
    </extensions>

    <actions>
        <action id="RunUntilStopped" class="com.github.zolotov.mijnintellij.listeners.RunUntilStoppedAction">
            <add-to-group anchor="last" group-id="RunContextGroup"/>
        </action>
    </actions>
</idea-plugin>
